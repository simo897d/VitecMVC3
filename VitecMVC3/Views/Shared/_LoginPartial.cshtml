@using Microsoft.AspNetCore.Identity
@using VitecMVC3.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
        <a  class="login" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hej @User.Identity.Name!</a>

        <a class="site-btn " asp-controller="UserDashboard" asp-action="Index" title="GoToDashboard">Dashboard</a> 
        
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn-group-lg"><h5 style="color:darkred">Log out</h5></button>
        </form>
}
else
{
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
